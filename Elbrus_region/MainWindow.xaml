<Window x:Class="Elbrus_region.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Elbrus_region"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="800"
        Icon="assets/logo.ico">
    <Grid Background="{ StaticResource AttentionColor }">
        <TextBlock HorizontalAlignment="Center" Foreground="{ StaticResource PrimaryColor }"  FontSize="30" Margin="0,30,0,0" TextWrapping="Wrap" Text="Авторизация"  VerticalAlignment="Top"/>
        <TextBox Name="tb_Login"  HorizontalAlignment="Left" Margin="328,111,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="tb_Password"  HorizontalAlignment="Left" Margin="328,156,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button Content="Авторизоваться" Background="{ StaticResource PrimaryColor }" Click="Button_Click" HorizontalAlignment="Left" Margin="348,249,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
